// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  username String  @id @db.VarChar(100)
  password String  @db.VarChar(100)
  name     String  @db.VarChar(100)
  token    String? @db.VarChar(100)

  @@map("users")
}

model Receiver {
  id        Int      @id @default(autoincrement())
  nama      String   @db.VarChar(100)
  email     String   @unique @db.VarChar(100)
  letters   Letter[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("penerima")
}

model Letter {
  id               Int      @id @default(autoincrement())
  nomor_registrasi Int      @unique @default(autoincrement())
  pengirim         String   @db.VarChar(100)
  tujuan           String   @db.VarChar(100)
  nomor_surat      String   @db.VarChar(50)
  tanggal_masuk    DateTime
  tanggal_surat    DateTime
  perihal          String   @db.VarChar(255)
  file_url         String   @db.VarChar(255)
  status           LetterStatus @default(pending)
  penerima_id      Int
  penerima         Receiver @relation(fields: [penerima_id], references: [id])
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  @@map("surat")
}

enum LetterStatus {
  pending
  diterima
  ditolak
}